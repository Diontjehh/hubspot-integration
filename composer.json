{
    "name": ":vendor_slug/:package_slug",
    "description": ":package_description",
    "keywords": [
        ":vendor_name",
        "j-johnson-designs",
        "j-j-designs-dev",
        "i-am-ai",
        "babalu",
        "laravel",
        ":package_slug"
    ],
    "homepage": "https://github.com/:vendor_slug/:package_slug",
    "license": "MIT",
    "authors": [
        {
            "name": ":author_name",
            "email": "author@domain.com",
            "role": "Architect"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.16",
        "nunomaduro/collision": "^8.1.1",
        "larastan/larastan": "^2.9.7",
        "orchestra/testbench": "^9.1.2",
        "pestphp/pest": "^2.34.7",
        "pestphp/pest-plugin-arch": "^2.7.0",
        "pestphp/pest-plugin-laravel": "^2.4.0",
        "phpstan/extension-installer": "^1.3.1",
        "phpstan/phpstan-deprecation-rules": "^1.2.0",
        "phpstan/phpstan-phpunit": "^1.4.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "VendorName\\Skeleton\\": "src/",
            "VendorName\\Skeleton\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VendorName\\Skeleton\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "echo 'Local DEV Note: packages/:vendor_slug/skeleton/composer.json:48'",
            "echo 'From Inside Docker To Support Post Testing, Which Looks For Db Connect:'",
            "echo @composer run prepare",
            "echo 'Local DEV Note: packages/:vendor_slug/skeleton/composer.json:51'",
            "echo 'After package development, run the following commands to publish assets - SHOULD BE IN FRONTEND, THIS IS Backend LOGIC ONLY:'",
            "echo 'cd ../../.. && @php artisan vendor:publish --tag=skeleton-inertia'",
            "echo @composer run publish",
            "echo 'After package development, decouple Package Tools for removal, as they collide here - SHOULD BE IN FRONTEND, THIS IS Backend LOGIC ONLY:'",
            "echo @composer run optimize"
        ],
        "publish": "cd ../../.. && php artisan vendor:publish --tag=skeleton-inertia",
        "optimize": "cd ../../.. && php artisan optimize",
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "process-timeout": 700
    },
    "extra": {
        "laravel": {
            "providers": [
                "VendorName\\Skeleton\\SkeletonServiceProvider"
            ],
            "aliases": {
                "Skeleton": "VendorName\\Skeleton\\Facades\\Skeleton"
            }
        },
        "branch-alias": {
            "dev-main": "1.10-dev"
        }
    },
    "prefer-stable": true
}
